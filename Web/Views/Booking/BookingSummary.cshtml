@model SolutionNorSolutionPort.AspMvc.Controllers.BookingSummaryContract

@{
    ViewBag.Title = "BookingSummary";
}

<h2>Booking Summary ( @Html.Raw(Model.Locator) )</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.Partial("_tab")

        <br />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table class="table">
            <tr>
                <th>Date Time</th>
                <th>From Date Time</th>
                <th>Until Date Time</th>
                <th>Service Type Name</th>
                <th>Service Description</th>
                <th>Service Request Status Name</th>
                <th>Service Amount</th>
                <th>Service Currency Type Name</th>
            </tr>

            @foreach (var item in Model.Summary) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DateTime) </td>
                    <td>@Html.DisplayFor(modelItem => item.FromDateTime) </td>
                    <td>@Html.DisplayFor(modelItem => item.UntilDateTime) </td>
                    <td>@Html.DisplayFor(modelItem => item.ServiceTypeName) </td>
                    <td>@Html.DisplayFor(modelItem => item.ServiceDescription) </td>
                    <td>@Html.DisplayFor(modelItem => item.ServiceRequestStatusName) </td>
                    <td>@Html.DisplayFor(modelItem => item.ServiceAmount) </td>
                    <td>@Html.DisplayFor(modelItem => item.ServiceCurrencyTypeName) </td>
                </tr>
            }
        </table>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript"> $(function () { $('.date-picker').datepicker(); }) </script>
}
