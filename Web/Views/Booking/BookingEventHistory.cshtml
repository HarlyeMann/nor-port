@model SolutionNorSolutionPort.AspMvc.Controllers.BookingEventHistoryContract

@{
    ViewBag.Title = "BookingEventHistory";
}

<h2>Booking Event History ( @Html.Raw(Model.Locator) )</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.Partial("_tab")

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <table class="table">
            <tr>
                <th>Date Time</th>
                <th>History Event Group Name</th>
                <th>History Event Type Name</th>
                <th>History Event Description</th>
                <th></th>
            </tr>

            @foreach (var item in Model.EventHistory) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.DateTime) </td>
                    <td>@Html.DisplayFor(modelItem => item.HistoryEventGroupName) </td>
                    <td>@Html.DisplayFor(modelItem => item.HistoryEventTypeName) </td>
                    <td>@Html.DisplayFor(modelItem => item.HistoryEventDescription) </td>
                </tr>
            }
        </table>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/themes/base/all.css")
    <script type="text/javascript">
        $(function () {
            // This will make every element with the class "date-picker" into a DatePicker element
            $('.date-picker').datepicker(({ dateFormat: "yy-mm-dd" }));
        })
    </script>
}
