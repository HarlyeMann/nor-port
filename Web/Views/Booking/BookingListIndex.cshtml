@model IEnumerable<SolutionNorSolutionPort.BusinessLogicLayer.BookingsOpenContract>

@{
    ViewBag.Title = "Index";
}

<h2>Bookings</h2>

<p>
    @Html.ActionLink("Create New", "BookingCreate")
</p>

<table class="table">
    <tr>
        <th>Record Locator</th>
        <th>Last Booking Event</th>
        <th>Date Time</th>
        <th>Contact Method</th>
        <th>Booking Source Name</th>
        <th>Adult Count</th>
        <th>Child Count</th>
        <th>Infant Count</th>
        <th>Balance</th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.RecordLocator) </td>
            <td>@Html.DisplayFor(modelItem => item.LastBookingEventTypeName) </td>
            <td>@Html.DisplayFor(modelItem => item.LastBookingEventDateTime) </td>
            <td>@Html.DisplayFor(modelItem => item.LastBookingContactMethod) </td>
            <td>@Html.DisplayFor(modelItem => item.BookingSourceName) </td>
            <td>@Html.DisplayFor(modelItem => item.AdultCount) </td>
            <td>@Html.DisplayFor(modelItem => item.ChildCount) </td>
            <td>@Html.DisplayFor(modelItem => item.InfantCount) </td>
            <td>@Html.DisplayFor(modelItem => item.BalanceAmount) </td>
            <td>
                  @Html.ActionLink("Modify", "BookingGeneral", "Booking", new { bookingId = item.BookingId }, null) 
                | @Html.ActionLink("Modify(WinForm)", "Booking", "Home", new { bookingId = item.BookingId }, null)
            </td>
        </tr>
    }

</table>
