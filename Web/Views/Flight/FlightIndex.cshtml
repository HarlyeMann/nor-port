@model IEnumerable<SolutionNorSolutionPort.BusinessLogicLayer.CrudeFlightContract>

@{
    ViewBag.Title = "Index Flight";
}

<h2>Index for Flight</h2>

<p>
    @Html.ActionLink("Create New", "FlightCreate")
</p>

<table class="table">
    <tr>
        <th>Aircraft Type</th>
        <th>From Date Time</th>
        <th>Until Date Time</th>
        <th>Comment</th>
        <th>Date Time</th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.AircraftTypeRcd) </td>
            <td>@Html.DisplayFor(modelItem => item.FromDateTime) </td>
            <td>@Html.DisplayFor(modelItem => item.UntilDateTime) </td>
            <td>@Html.DisplayFor(modelItem => item.Comment) </td>
            <td>@Html.DisplayFor(modelItem => item.DateTime) </td>
            <td>
                @Html.ActionLink("Edit", "FlightEdit", new { flightId = item.FlightId })
            </td>
        </tr>
    }

</table>
